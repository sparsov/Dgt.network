# Используем образ Node.js
FROM node:14

# Устанавливаем директорию приложения в контейнере
WORKDIR /app

# Копируем зависимости и файлы пакета
COPY package*.json ./

# Устанавливаем зависимости
RUN yarn install

# Копируем остальные файлы приложения
COPY . .

# Запускаем команду для старта приложения
CMD ["yarn", "start"]
